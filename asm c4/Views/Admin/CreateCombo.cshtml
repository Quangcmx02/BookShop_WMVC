@model asm_c4.Models.Combo
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Create Combo";
}

<h1>Thêm Combo</h1>

<form asp-action="CreateCombo" method="post">
    <div class="form-group">
        <label for="TenCombo">Tên Combo</label>
        <input type="text" class="form-control" id="TenCombo" name="TenCombo" required />
    </div>
    <div class="form-group">
        <label for="MoTa">Mô tả</label>
        <textarea class="form-control" id="MoTa" name="MoTa"></textarea>
    </div>
    <div class="form-group">
        <label for="Gia">Giá</label>
        <input type="number" class="form-control" id="Gia" name="Gia" required />
    </div>
    <div class="form-group">
        <label for="Quantity">Số lượng</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" />
    </div>
    <div class="form-group">
        <label for="TrangThai">Trạng thái</label>
        <select class="form-control" id="TrangThai" name="TrangThai">
            <option value="true">Đang hoạt động</option>
            <option value="false">Ngừng hoạt động</option>
        </select>
    </div>
    <div class="form-group">
        <label for="LinkImages">Hình ảnh (URL)</label>
        <input type="text" class="form-control" id="LinkImages" name="LinkImages" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
