@model asm_c4.Models.Sach

@{
    ViewData["Title"] = "Thêm Sách Mới";
}
@{
    Layout = "_AdminLayout";
}

<h2>Thêm Sách Mới</h2>

<form asp-action="CreateBook" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="TenSach"></label>
        <input asp-for="TenSach" class="form-control" required />
        <span asp-validation-for="TenSach" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HinhAnh"></label>
        <textarea asp-for="HinhAnh" class="form-control"></textarea>
        <span asp-validation-for="HinhAnh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GiaTien"></label>
        <input asp-for="GiaTien" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="GiaTien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" type="number" required />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrangThai"></label>
        <select asp-for="TrangThai" class="form-control">
            <option value="true">Đang kinh doanh</option>
            <option value="false">Ngừng kinh doanh</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="DanhMuc.TenDanhMuc" class="control-label"></label>
        <select asp-for="DanhMuc.TenDanhMuc" class="form-control" asp-items="ViewBag.TenDanhMuc"></select>
    </div>
    <button type="submit" class="btn btn-primary">Thêm Sách</button>
</form>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
