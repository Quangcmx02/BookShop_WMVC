@model asm_c4.Models.User

@{
    ViewData["Title"] = "Chỉnh Sửa Tài Khoản";
}
@{
    Layout = "_AdminLayout";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditAccount" method="post">
    <input type="hidden" asp-for="UserId" />

    <!-- Trường Username: dùng hidden input để gửi về server mà không chỉnh sửa -->
    <div class="form-group">
        <label class="control-label">Tên đăng nhập</label>
        <input type="text" class="form-control" value="@Model.Username" readonly />
        <input type="hidden" asp-for="Username" />
    </div>

    <!-- Trường Mật khẩu -->
    <div class="form-group">
        <label asp-for="Password" class="control-label">Mật khẩu</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- Trường Vai trò: Dùng text để hiển thị vai trò mà không cho phép chỉnh sửa -->
    <div class="form-group">
        <label class="control-label">Vai trò</label>
        <input type="text" class="form-control" value="@Model.VaiTro" readonly />
        <input type="hidden" asp-for="VaiTro" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="AccountManagement" class="btn btn-secondary">Hủy</a>
    </div>
</form>
