@model asm_c4.Models.DonHang
@{
    Layout = "_AdminLayout";
}

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details for Order ID @Model.DonHangId</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.DonHangChiTiets)
        {
            <tr>
                <td>@detail.Sach.TenSach</td>  <!-- Tên sách -->
                <td>@detail.SoLuongSach</td>        <!-- Số lượng -->
                <td>@detail.DonGia.ToString("C")</td>  <!-- Đơn giá -->
                <td>@detail.ThanhTien.ToString("C")</td> <!-- Thành tiền -->
            </tr>
        }
    </tbody>
</table>

<p><strong>Total Order Amount: </strong>@Model.TongTien.ToString("C")</p>
<p><strong>Status: </strong>@Model.TrangThai</p>
