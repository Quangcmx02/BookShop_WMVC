@using X.PagedList.Mvc.Core
@using X.PagedList
@{
    Layout = "_Layout";
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-4">
    <!-- Sản phẩm Sách -->
    <div class="text-center mb-4">
        <h2 class="text-primary">Danh sách Sách</h2>
        <p class="text-muted">Những cuốn sách hay nhất dành cho bạn!</p>
    </div>

    <div class="row g-4">
        @foreach (var sach in ViewBag.SachList as IPagedList<Sach>)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card shadow-sm h-100">
                    <img src="@sach.HinhAnh" class="card-img-top" alt="@sach.TenSach" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@sach.TenSach">@sach.TenSach</h5>
                        <p class="card-text text-success fw-bold">@sach.GiaTien.ToString("C")</p>
                        <div class="mt-auto d-flex justify-content-center">
                            <a href="@Url.Action("Details", "Product", new { id = sach.SachId })" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Xem thêm</a>
    </div>

    <!-- Sản phẩm Combo -->
    <div class="text-center mt-5 mb-4">
        <h2 class="text-primary">Danh sách Combo</h2>
        <p class="text-muted">Những combo hấp dẫn dành cho bạn!</p>
    </div>

    <div class="row g-4">
        @foreach (var combo in ViewBag.ComboList as IPagedList<Combo>)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card shadow-sm h-100">
                    <img src="@combo.LinkImages" class="card-img-top" alt="@combo.TenCombo" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@combo.TenCombo">@combo.TenCombo</h5>
                        <p class="card-text text-success fw-bold">@combo.Gia.ToString("C")</p>
                        <div class="mt-auto d-flex justify-content-center">
                            <a href="@Url.Action("Details", "Combo", new { id = combo.ComboId })" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Combo")" class="btn btn-primary">Xem thêm</a>
    </div>
</div>
